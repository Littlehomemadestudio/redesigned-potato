# فایل نمونه متغیرهای محیطی
# این فایل را کپی کرده و نام آن را به .env تغییر دهید

# توکن ربات بله
BOT_TOKEN=your_bot_token_here

# تنظیمات پایگاه داده
DATA_FILE=war_data.txt
LOG_FILE=war_logs.txt

# تنظیمات بازی
RESOURCE_PRODUCTION_INTERVAL=5
MAX_COUNTRY_LEVEL=50
MAX_LOGS=10000
MIN_ATTACK_POWER=100
MAX_LEVEL_DIFF_FOR_ATTACK=2
CONQUEST_CHANCE_BASE=10
SPY_SUCCESS_BASE=30

# تنظیمات لاگ
ENABLE_FILE_LOGGING=true
LOG_LEVEL=INFO

# تنظیمات داکر
DOCKER_IMAGE_NAME=war-simulation-bot
DOCKER_CONTAINER_NAME=war-bot

# تنظیمات Redis (اختیاری)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# تنظیمات امنیتی
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# تنظیمات مانیتورینگ
ENABLE_METRICS=true
METRICS_PORT=8080

# تنظیمات پشتیبان‌گیری
BACKUP_INTERVAL=3600
MAX_BACKUPS=5
BACKUP_DIR=./backups